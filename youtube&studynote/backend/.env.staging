# ==============================================
# STAGING ENVIRONMENT (.env.staging)
# ==============================================
# Use this file for staging/test deployment
# DO NOT commit real credentials to Git!

NODE_ENV=staging
PORT=3000
DB_ENVIRONMENT=cloud

# MongoDB Cloud
MONGODB_CLOUD=mongodb+srv://your-staging-username:your-staging-password@cluster0.mongodb.net/codingTerminals-staging
MONGODB_LOCAL=mongodb://localhost:27017/codingTerminals

# Server URLs
FRONTEND_URL=https://staging-app.render.com
BACKEND_URL=https://staging-api.render.com
API_URL=https://staging-api.render.com/api

# Authentication
JWT_SECRET=staging-jwt-secret-key-change-this
SESSION_SECRET=staging-session-secret-change-this
JWT_EXPIRY=24h

# CORS
ALLOWED_ORIGINS=https://staging-app.render.com,https://staging-api.render.com

# Logging
LOG_LEVEL=info
LOG_FORMAT=combined

# ==============================================
# NOTES
# ==============================================
# 1. Update credentials with your staging MongoDB
# 2. Use separate MongoDB user for staging
# 3. Never commit real credentials
# 4. Use strong secrets for staging
# 5. Whitelist Render IP in MongoDB Atlas