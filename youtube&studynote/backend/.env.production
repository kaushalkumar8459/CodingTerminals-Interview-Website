# ==============================================
# PRODUCTION ENVIRONMENT (.env.production)
# ==============================================
# Use this file for production deployment
# DO NOT commit real credentials to Git!
# Use only secrets when deploying to Render

NODE_ENV=production
PORT=3000
DB_ENVIRONMENT=cloud

# MongoDB Cloud
MONGODB_CLOUD=mongodb+srv://your-prod-username:your-prod-password@cluster0.mongodb.net/codingTerminals-prod
MONGODB_LOCAL=mongodb://localhost:27017/codingTerminals

# Server URLs
FRONTEND_URL=https://your-production-domain.com
BACKEND_URL=https://your-production-domain.com
API_URL=https://your-production-domain.com/api

# Authentication
JWT_SECRET=production-jwt-secret-key-change-this
SESSION_SECRET=production-session-secret-change-this
JWT_EXPIRY=7d

# CORS
ALLOWED_ORIGINS=https://your-production-domain.com

# Logging
LOG_LEVEL=warn
LOG_FORMAT=combined

# ==============================================
# NOTES
# ==============================================
# 1. Update credentials with your production MongoDB
# 2. Use separate MongoDB user for production
# 3. Never commit real credentials to Git
# 4. Use very strong secrets for production
# 5. Whitelist Render IP in MongoDB Atlas
# 6. Enable backup and monitoring
# 7. Use environment variables on Render dashboard
#    instead of committing this file